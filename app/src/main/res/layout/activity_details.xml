<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="woc.bhavye.letsfindit.Details">

    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/reported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="Not Reported....Yet!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reported"
        android:layout_marginTop="91dp"
        android:layout_toStartOf="@+id/cat"
        android:onClick="onClickFound"
        android:text="Found"
        android:visibility="invisible" />

    <Button
        android:id="@+id/not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/found"
        android:layout_alignBottom="@+id/found"
        android:layout_toEndOf="@+id/reported"
        android:onClick="onClickNotFound"
        android:text="NOT FOUND"
        android:visibility="invisible" />

    <Button
        android:id="@+id/open_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cat"
        android:layout_below="@+id/not_found"
        android:layout_marginTop="37dp"
        android:text="OPEN CHAT"
        android:textAlignment="center"
        android:visibility="invisible"
        android:onClick="onClickOpenChat"/>
</RelativeLayout>
