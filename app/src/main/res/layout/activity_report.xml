<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="woc.bhavye.letsfindit.Report">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Category"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/report"
        android:layout_below="@+id/text1"
        android:layout_marginTop="74dp"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:onClick="onClickReport"
        android:text="REPORT"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Note: Your name and contact will \n be shared with the concerned person only."
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textReported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/report"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="REPORTED!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>
